<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>org.example.lazarus-plugin</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>Lazarus-plugin</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://www.yourcompany.com">YourCompany</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        Enter short description for your plugin here.<br>
        <em>most HTML tags may be used</em>
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <depends>com.intellij.java</depends>



    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="org.example.lazarusplugin.Main"/>

        <!-- Service registrations -->
        <projectService serviceInterface="org.example.lazarusplugin.services.api.GraphStorage"
                        serviceImplementation="org.example.lazarusplugin.services.impl.SemGraphStorage"/>
        <projectService serviceInterface="org.example.lazarusplugin.services.api.GraphBuilder"
                        serviceImplementation="org.example.lazarusplugin.services.impl.PsiGraphBuilder"/>
        <projectService serviceInterface="org.example.lazarusplugin.services.api.GraphReader"
                        serviceImplementation="org.example.lazarusplugin.services.impl.SemGraphReader"/>
        <projectService serviceInterface="org.example.lazarusplugin.services.api.AgentService"
                        serviceImplementation="org.example.lazarusplugin.services.impl.LLMAgentService"/>
        <projectService serviceInterface="org.example.lazarusplugin.services.api.GraphAnalysis"
                        serviceImplementation="org.example.lazarusplugin.services.impl.SemGraphAnalysis"/>
    </extensions>

    <actions>
        <action id="org.example.lazarusplugin.FileSemReportAction"
                class="org.example.lazarusplugin.actions.FileSemReportAction"
                text="Generate Semantic Report"
                description="Generate semantic report for the currently open file">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt S"/>
        </action>

        <action id="org.example.lazarusplugin.GlobalSemReportAction"
                class="org.example.lazarusplugin.actions.GlobalSemReportAction"
                text="Generate Global Semantic Report"
                description="Generate semantic report for the entire codebase">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt shift S"/>
        </action>
    </actions>
</idea-plugin>