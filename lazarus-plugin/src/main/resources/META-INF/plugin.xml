<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>org.example.lazarus-plugin</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>Lazarus-plugin</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://www.yourcompany.com">YourCompany</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        Enter short description for your plugin here.<br>
        <em>most HTML tags may be used</em>
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="org.example.lazarusplugin.Main"/>

        <!-- Service registrations -->
        <applicationService serviceImplementation="org.example.lazarusplugin.utils.HttpClient"/>

        <projectService serviceInterface="org.example.lazarusplugin.services.graph.api.GraphStorage"
                        serviceImplementation="org.example.lazarusplugin.services.graph.impl.SemGraphStorage"/>
        <projectService serviceInterface="org.example.lazarusplugin.services.graph.api.GraphBuilder"
                        serviceImplementation="org.example.lazarusplugin.services.graph.impl.PsiGraphBuilder"/>
        <projectService serviceInterface="org.example.lazarusplugin.services.graph.api.GraphReader"
                        serviceImplementation="org.example.lazarusplugin.services.graph.impl.SemGraphReader"/>
        <projectService serviceInterface="org.example.lazarusplugin.services.graph.api.AgentService"
                        serviceImplementation="org.example.lazarusplugin.services.graph.impl.LLMAgentService"/>
        <projectService serviceInterface="org.example.lazarusplugin.services.graph.api.GraphAnalysis"
                        serviceImplementation="org.example.lazarusplugin.services.graph.impl.SemGraphAnalysis"/>

        <!-- Git services -->
        <projectService serviceInterface="org.example.lazarusplugin.repository.api.ICommandRepository"
                        serviceImplementation="org.example.lazarusplugin.repository.impl.CommandRepository"/>
        <projectService serviceInterface="org.example.lazarusplugin.repository.api.IDiffRepository"
                        serviceImplementation="org.example.lazarusplugin.repository.impl.DiffRepository"/>
        <projectService serviceInterface="org.example.lazarusplugin.services.git.api.IDiffService"
                        serviceImplementation="org.example.lazarusplugin.services.git.impl.RobustGitDiffService"/>
    </extensions>

    <actions>
        <action id="org.example.lazarusplugin.FileSemReportAction"
                class="org.example.lazarusplugin.actions.FileSemReportAction"
                text="Generate Semantic Report"
                description="Generate semantic report for the currently open file">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt S"/>
        </action>

        <action id="org.example.lazarusplugin.GlobalSemReportAction"
                class="org.example.lazarusplugin.actions.GlobalSemReportAction"
                text="Global Semantic Report"
                description="Generate semantic report"
                icon="AllIcons.Actions.Preview">
            <add-to-group group-id="MainToolbarRight" anchor="before" relative-to-action="RunnerActions"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt shift S"/>
        </action>

        <action id="org.example.lazarusplugin.GitDiffSemReportAction"
                class="org.example.lazarusplugin.actions.GitDiffSemReportAction"
                text="Fetch-Compare Semantics"
                description="Fetch remote changes and show semantic diff report"
                icon="AllIcons.Actions.Diff">
            <add-to-group group-id="MainToolbarRight" anchor="before" relative-to-action="RunnerActions"/>
            <add-to-group group-id="Vcs.MainMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt shift D"/>
        </action>
    </actions>
</idea-plugin>